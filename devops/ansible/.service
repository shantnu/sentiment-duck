[Unit]
Description=Gunicorn instance to serve sentiduck
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/home/ubuntu/sentiduck
Environment="PATH=/home/ubuntu/sentiduck/env/bin"
ExecStart=/home/ubuntu/sentiduck/env/bin/gunicorn --workers 1 --bind unix:/home/ubuntu/sentiduck/sentiduck.sock -m 007 --timeout 180 wsgi:app

[Install]
WantedBy=multi-user.target
